pipeline {
    agent any
    
    stages {
        stage('Run Docker Compose') {
            steps {
                script {
                    // Force remove any existing containers
                    sh 'docker compose down --remove-orphans || true'
                    
                    // Build images
                    sh 'docker compose build'
                    
                    // Start containers with clean state
                    sh 'docker compose up -d --force-recreate'
                }
            }
        }
    }
    
    post {
        always {
            // Cleanup after build
            sh 'docker compose down --remove-orphans || true'
        }
    }
}